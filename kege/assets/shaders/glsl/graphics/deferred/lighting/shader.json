{
    "shader-program":
    {
        "pipeline": "graphics",
        "name": "basic-shader",

        "shader-stages":
        [
            {
                "stage": "vertex",
                "file":  "deferred-mesh-object.vert"
            },
            {
                "stage": "fragment",
                "file":  "deferred-mesh-object.frag"
            },
        ],

        "rasterization":
        {
            "primative-topology": "triangle-list",
            "polygon-mode": "line",
            "cull-mode": "cull_none"
        },

        "input-bindings":
        [
            {
                "binding":      0,
                "stride":       "sizeof(vec3, vec3, vec2, vec3, vec3)",
                "input-rate":   "input-per-vertex"
            },
        ],
    }
}

